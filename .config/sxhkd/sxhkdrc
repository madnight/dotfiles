# terminal emulator
super + Return
    zsh -c "uxterm"

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd; \
    notify-send "sxhkd config reloaded"

# webbrowser
super + w
    uchromium

# anon vrowser
super + p
    tor-browser-en

# dmenu
super + @F2
    rofi -demnu -combi-modi drun,window -show combi -modi combi

super + @F8
    xbacklight -dec 10%

super + @F9
    xbacklight -inc 10%

# dmenu
super + @F3
    rofi -demnu -combi-modi drun,window -show combi -modi combi

super + @F4
    rofi -theme c64.rasi -demnu -combi-modi window,drun -show colorscheme -modi colorscheme:~/scripts/rofi-colorscheme-switch

